{
  "name": "wikibase-rest-api-ts",
  "version": "1.0.0",
  "description": "Typescript model and API code for interacting with the REST API of a Wikibase instance (like Wikidata)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "generate-api": "openapi-generator-cli generate",
    "g": "npm run generate-api",
    "clean-on-nix": "rm -rf ./src/generated",
    "c": "npm run clean-on-nix",
    "clean-on-win": "rmdir /s /q src\\generated",
    "cw": "npm run clean-on-win",
    "build": "tsup",
    "list-versions": "openapi-generator-cli version-manager list"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/openetymologymap/wikibase-rest-api-ts.git"
  },
  "keywords": [
    "wikibase",
    "wikidata",
    "typescript",
    "rest",
    "api"
  ],
  "author": "Daniele Santini",
  "license": "LGPL-3.0-or-later",
  "bugs": {
    "url": "https://gitlab.com/openetymologymap/wikibase-rest-api-ts/issues"
  },
  "homepage": "https://gitlab.com/openetymologymap/wikibase-rest-api-ts#readme",
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.0",
    "typescript": "^5.5.3"
  }
}
